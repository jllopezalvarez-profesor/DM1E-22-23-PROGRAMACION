	definir numDiaSemana Como Entero;
	
	Escribir Sin Saltar "Dime el número del día de la semana, de 1 (lunes) a 7 (domingo): ";
	Leer numDiaSemana;
	
	Segun numDiaSemana Hacer
		1: escribir "Lunes";
		2: escribir "Martes";
		3: escribir "Miércoles";
		4: escribir "Jueves";
		5: escribir "Viernes";
		6: escribir "Sábado";
		7: escribir "Domingo";
		De Otro Modo:
			Escribir "Error";
	FinSegun
	
	
	
	
	
	

	
FinProceso
