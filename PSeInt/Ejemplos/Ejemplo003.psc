	// Definimos PI y asignamos su valor aproximado.
	Definir numeroPi Como Real;
	numeroPi <- 3.1416;
	// Definimos el radio de la circunferencia
	Definir radio Como Real;
	radio <- 5.5;
	// Definimos una variable para el cálculo del área y realizamos el cálculo
	Definir area Como Real;
	area <- numeroPi*(radio^2);
	// Mostramos el resultado.
	Escribir area;
